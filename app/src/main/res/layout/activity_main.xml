<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#880e4f"
    tools:context=".MainActivity_MuhammadHafiz_NikAhmadFaisal_AbdulHakeemMirza">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logoplwhite3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Register to get started"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColor="#F2F2F2"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="28dp"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:background="@drawable/logintextviewstate"
            android:inputType="text"
            android:paddingLeft="24dp"
            android:layout_marginTop="20dp"
            android:textColorHighlight="#fff"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/logintextviewstate"
            android:inputType="textPassword"
            android:paddingLeft="24dp"
            android:layout_marginTop="14sp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:background="@drawable/logintextviewstate"
            android:inputType="number"
            android:paddingLeft="24dp"
            android:layout_marginTop="20dp"
            android:textColorHighlight="#fff"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:background="@drawable/logintextviewstate"
            android:inputType="text"
            android:paddingLeft="24dp"
            android:layout_marginTop="20dp"
            android:textColorHighlight="#fff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Register"
            android:backgroundTint="#42A476"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:text="Already registered? Sign in here"
            android:id="@+id/textViewSignIn"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#D8D8D8"
            android:layout_marginTop="4dp"
            android:textSize="12sp" />
